<Window x:Class="Chisldiferen.Cubic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chisldiferen"
        mc:Ignorable="d"
        Title="Cubic" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ввод параметров -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,5">
            <TextBox x:Name="txtXStart" Width="80" Text="x начальное" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="txtYStart" Width="80" Margin="10,0" Text="y начальное" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="txtH" Width="80" Margin="10,0" Text="шаг h" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="txtCount" Width="80" Margin="10,0" Text="кол-во точек" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button Content="Добавить точки" Click="AddPoints_Click" Width="120" Margin="10,0"/>
        </StackPanel>

        <!-- Отображение введённых точек -->
        <GroupBox Grid.Row="1" Header="Введенные точки" Margin="0,5">
            <ListBox x:Name="lstPoints" DisplayMemberPath="ToString" Height="100"/>
        </GroupBox>

        <!-- Ввод точки для вычисления производной -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="x для производной:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtDerivativeX" Width="80" Margin="10,0" Text="1.5" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button Content="Рассчитать производную" Click="CalculateDerivative_Click" Width="160" Margin="10,0"/>
        </StackPanel>

        <!-- Результат -->
        <TextBlock Grid.Row="3" x:Name="txtResult" Margin="0,10" FontSize="16"/>
    </Grid>
</Window>
