<Window x:Class="Chisldiferen.Quadric"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chisldiferen"
        mc:Ignorable="d"
        Title="Quadric" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ввод точки -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtX" Width="80" Margin="0,0,10,0"/>
            <TextBlock Text="Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtY" Width="80" Margin="0,0,10,0"/>
            <Button Content="Добавить" Click="BtnAddPoint_Click" Width="80"/>
        </StackPanel>

        <!-- Список точек -->
        <GroupBox Grid.Row="1" Header="Введенные точки">
            <ListBox x:Name="lstPoints" Height="120" DisplayMemberPath="ToString"/>
        </GroupBox>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Рассчитать производные" Click="BtnCalculate_Click" Width="160"/>
            <Button Content="Очистить" Click="BtnClear_Click" Width="100" Margin="10,0"/>
        </StackPanel>

        <!-- Результаты производных -->
        <GroupBox Grid.Row="3" Header="Производные (квадратичная интерполяция)">
            <ListBox x:Name="lstDerivatives" DisplayMemberPath="ToString"/>
        </GroupBox>
    </Grid>
</Window>
