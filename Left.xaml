<Window x:Class="Chisldiferen.Left"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chisldiferen"
        mc:Ignorable="d"
        Title="Left" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Вычислить производную" 
                Command="{Binding CalculateCommand}"
                HorizontalAlignment="Left"
                Margin="0,10"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Results}" AutoGenerateColumns="True" Margin="0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="X" Binding="{Binding X}" />
                <DataGridTextColumn Header="Производная" Binding="{Binding Derivative}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
